# AI Ops Guardian Angel - Production Environment Configuration
# ⚠️ IMPORTANT: Copy this file to .env.production and replace all placeholder values

# Environment
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false

# API Settings
API_GATEWAY_PORT=3001
AI_SERVICES_PORT=8001
DATA_SERVICES_PORT=8003
CLOUD_INTEGRATIONS_PORT=8002
SECURITY_SERVICES_PORT=8004
REAL_TIME_SERVICES_PORT=8005

# Database Configuration - MongoDB Atlas
MONGODB_URI=mongodb+srv://[USERNAME]:[PASSWORD]@[CLUSTER].mongodb.net/ai_ops_platform?retryWrites=true&w=majority
REDIS_URI=redis://[REDIS_HOST]:6379

# AI Model Configuration
OPENAI_API_KEY=[YOUR_OPENAI_API_KEY]
ANTHROPIC_API_KEY=[YOUR_ANTHROPIC_API_KEY]
DEFAULT_MODEL=gpt-4

# Authentication & Security
JWT_SECRET=[YOUR_32_CHARACTER_JWT_SECRET]
SECRET_KEY=[YOUR_32_CHARACTER_SECRET_KEY]
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
API_GATEWAY_URL=https://api.your-domain.com

# Cloud Provider Credentials
AWS_ACCESS_KEY_ID=[YOUR_AWS_ACCESS_KEY]
AWS_SECRET_ACCESS_KEY=[YOUR_AWS_SECRET_KEY]
AWS_DEFAULT_REGION=us-east-1

AZURE_CLIENT_ID=[YOUR_AZURE_CLIENT_ID]
AZURE_CLIENT_SECRET=[YOUR_AZURE_CLIENT_SECRET]
AZURE_TENANT_ID=[YOUR_AZURE_TENANT_ID]

GCP_PROJECT_ID=[YOUR_GCP_PROJECT_ID]
GCP_SERVICE_ACCOUNT_KEY=[YOUR_GCP_SERVICE_ACCOUNT_KEY]

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Alerting Configuration
SLACK_WEBHOOK_URL=[YOUR_SLACK_WEBHOOK_URL]
EMAIL_NOTIFICATIONS_ENABLED=true
SENDGRID_API_KEY=[YOUR_SENDGRID_API_KEY] 